<%= form_for(@user) do |f| %>
<%= render 'shared/error_messages' %>

<%= f.label :first_name %>
<%= f.text_field :first_name %>

<%= f.label :last_name %>
<%= f.text_field :last_name %>

<%= f.label :displayed_name %>
<%= f.text_field :displayed_name %>

<%= f.label :email %>
<%= f.text_field :email %>

<%= f.label :password %>
<%= f.password_field :password %>

<%= f.label :password_confirmation, "Confirmation" %>
<%= f.password_field :password_confirmation %>

<div class="left-to-right">
  <%= f.label :birthday %>
  <%= f.date_select :birthday, start_year: 1920, end_year: Time.now.year %>
  <%= f.label "Hide my age:" %>
  <%= f.check_box :hide_age %>
</div>

<div class="left-to-right">
  <%= f.label "Gender:" %>
  <%= f.radio_button :male, "1" %><%= f.label :male, "Male" %>
  <%= f.radio_button :male, "0" %><%= f.label :male, "Female"%>
</div>

<%= f.label :city %>
<%= f.text_field :city %>

<%= f.label :country %>
<%= f.text_field :country %>

<%= f.label :zip_code %>
<%= f.text_field :zip_code %>

<div class="left-to-right">
  <%= f.label "Upload a profile picture:" %>
  <%= f.file_field :photo %>
</div>

<div>
  <%= f.submit submit_button_text, class: "btn btn-large btn-primary" %>
</div>
    
<% end %>
