<div class="user">
<%= render "users/logged_in_header" %>
<%= form_for @post do |f| %>
  <%= f.text_field :content, placeholder: "What do you want?" %>
  <%= f.submit "Post", class: "btn btn-large btn-primary" %>
<% end %>

<div class="row-fluid">
  <div class="span3 post-sidebar">
    <h3>Timeline of posts</h3>
    <% @user.user_posts.each do |p| %>
      <% if p.content  %>
      <div class="post">
         <%= p.content %>
         <% if current_user?(p.user) %>
           <%= link_to p, method: :delete, data: { confirm: "Are you sure you want to delete?" },
           	   title: p.content do %>
             <i class="icon-remove"></i>
           <% end %>
	 <% end %>
      </div>
      <% end %>
    <% end %>
    
  </div>

  <div class="span9">
    <h3>Book of gifts!</h3>
    <% @item_rows.each do |ri| %>
    <div class="row-fluid">
      <% ri.each do |i| %>
        <div class="span2">
	  <%= render partial: "items/show_item", locals: {item: i, user: @user} %>	  
	</div>
      <% end %>
    </div>
    <% end %>
  </div>  
</div>
</div>
