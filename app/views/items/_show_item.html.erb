<div class="item">
  <% if current_user?(user) %>
  <%= link_to item, method: :delete, data: { confirm: "Are you sure you want to delete?" } do %>
  <i class="icon-remove"></i>
  <%  end %>
  <% end %>
  <span class="price">
    Price: <% if item.price %><%= item.price %><% else %>??<% end %>      
  </span>
  <div class="item-image-and-title">
    <%= image_tag item.photo_path %>
    
    <h4><%= item.title %></h4>     
  </div>
  <%= render partial: "items/detail_pop", locals: {item: item} %>      
</div>
