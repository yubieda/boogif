<div class="add-gift-div">

  <% if @item.errors.any? %>
    <div id="errorExplanation">
      <h2>Error:</h2>
      <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  

  <%= form_for @item do |f| %>

    <div class="row-fluid">
      <div class="span2">
        <%= f.label "Product name:" %>
        <%= f.text_field :title %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span2">
        <%= f.label "Price:" %>
        <%= f.text_field :price %>
      </div>
      <div class="span2">
        <%= f.label "Currency:" %>
        <%= f.collection_select :currency, Money::Currency.stringified_keys.map{|k| Money::Currency.find(k)}, :iso_code, :iso_code %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span2">
        <%= f.label "Description" %>
        <%= f.text_field :description %>
      </div>
    </div>

 <div >
   <%= f.label "Image:" %>
   <div class="row">
     <% params[:scrapped_images].each do |t| %>
       <div class="span1">
         <%= image_tag t %>
         <br/>
         <%= f.radio_button :photo_path, t %>
       </div>
     <% end if params[:scrapped_images]%>
   </div>
  </div>

  <%= f.submit "Update", class: "btn btn-primary block" %>

  <% end %>


</div>
