<script type="text/javascript" charset="utf-8">
  console.log($(parent.document));
</script>
<div class="add-gift-div">

  <% if @item.errors.any? %>
    <div id="errorExplanation">
      <h2>Error:</h2>
      <ul>
        <% @item.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  

  <%= form_for @item do |f| %>
    <%=f.hidden_field :buy_link%>
    <div class="row-fluid">
      <div class="span2">
        <%= f.label "Product name:" %>
        <%= f.text_field :title %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span2">
        <%= f.label "Price:" %>
        <%= f.text_field :price %>
      </div>
      <div class="span2">
        <%= f.label "Currency:" %>
        <%= f.collection_select :currency, Money::Currency.stringified_keys.map{|k| Money::Currency.find(k)}, :iso_code, :iso_code %>
      </div>
    </div>

    <div class="row-fluid">
      <div class="span2">
        <%= f.label "Description" %>
        <%= f.text_field :description %>
      </div>
    </div>

 <div style='width:250px;height:120px;position:static;overflow-x:auto;overflow-y:auto;'>
   <%= f.label "Image:" %>
   <div class="row">
     <% @images.each do |t| %>
       <div class="span1" style='text-align:center;padding:4px;'>
         <div style='width:60px;height:60px;overflow:hidden;text-align:center'>
           <%= image_tag t, :style => 'max-width:60px;max-height:60px;' %>
         </div>
         <%= f.radio_button :photo_path, t %>
       </div>
     <% end%>
   </div>
  </div>

  <%= f.submit "Update", class: "btn btn-primary block" %>

  <% end %>


</div>
