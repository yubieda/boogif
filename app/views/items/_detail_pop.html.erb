<div class="item-dialog-pop popup">
  <div class="popup-title">
    <h2>Item Details<h2>
  </div>
  <div class="row-fluid">
    <div class ="span6">
      <div class="detail-image" >
	<%= image_tag item.photo_path %>
      </div>
      <%= link_to item.buy_link do %>
      <div class="btn btn-primary block">
	Buy Now
      </div>      
      <% end %>    
    </div>
    <div class ="span6">      
      <%= form_for item do |f| %>
      <%= f.label "Product name:" %>
      <%= f.text_field :title %>

      <div class="row-fluid">
	<div class="span4">
	   <%= f.label "Currency:" %>
	   <%= f.collection_select :currency, Money::Currency.stringified_keys.map{|k| Money::Currency.find(k)}, :iso_code, :iso_code %>
     	</div>
	<div class="span8 price-field">
	   <%= f.label "Price:" %>
	   <%= f.text_field :price %>
	</div>
      </div>
      <%= f.label "Description" %>
      <%= f.text_field :description %>      
      <%= f.hidden_field :photo_path %>
      
      <% if item.user == current_user %>
      <div class="row-fluid">
	<div class="span6">
	  <%= f.submit "Save Changes", class: "btn btn-primary block" %>
	</div>
	<div class="span6">
	  <%= link_to "Delete Item", item, method: :delete, data: { confirm: "Are you sure you want to delete?" }, class: "btn btn-primary " %>
	</div>
      </div>      

      <% else %>
      <%= f.submit "Add To My Book", class: "btn btn-primary block" %>
      <% end %>
      <% end %>            
    </div>
  </div>
</div>

