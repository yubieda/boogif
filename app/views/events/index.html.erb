<% provide(:page_header, "My Events") %>
<div class="event">
  <div class="row-fluid">
    <div class="span2"></div>
    <div class="span8">
      <h2>Events you created</h2>
      <%= link_to "Create new event", new_event_path %>
      
      <% current_user.events.each do |e| %>
      <%= render partial: "events/show_small", locals: {event: e} %>      
      <% end %>

      <h2>Events you're invited to</h2>

      <% current_user.invited_events.each do |e| %>
      <%= render partial: "events/show_small", locals: {event: e} %>      
      <% end %>

      
    </div>
    <div class="span2"></div>
  </div>
</div>
